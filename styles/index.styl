// Typography
@import url(http://fonts.googleapis.com/css?family=Lato:400,100,300,700&subset=latin,latin-ext);
hairline  = 100
light     = 300
regular   = 400
bold      = 700

// Colors
red       = #c44545
gray      = #515353

// Media
tablet    = 'screen and (min-width: 640px)'
desktop   = 'screen and (min-width: 960px)'

html
  font-size   2px
  font-family 'Lato', sans-serif;

  @media tablet
    font-size 3px

  @media desktop
    font-size 4px

html, body, #container
  height  100%
  margin  0
  padding 0

@import header

body
  background      black
  color           white
  font-size       6rem

  @media tablet
    font-size     4rem

  @media desktop
    font-size     2.5rem

#container
  width           100%
  max-width       1140px
  margin          auto
  display         flex
  flex-direction  column


  header
    flex-shrink   0
    flex-grow     0

  main
    flex-shrink   0
    flex-grow     1

main
  display               flex
  flex-direction        column
  align-items           center
  justify-content       space-around


  text-align            center

  > *
    display             block
    margin              auto
    flex-shrink         0

  h2
    max-width           200rem

    font-weight         light
    font-size           12.5rem

    strong
      font-weight       regular
      color             red

  #play
    min-height          40rem
    max-width           160rem
    min-width           40rem

    background          none
    background-image    url('play-btn.png')
    background-position center
    background-repeat   no-repeat
    background-size     30rem

    border              none

    cursor              pointer

  p
    max-width           160rem

  .more
    padding-bottom      16rem

    font-size           9rem
    text-decoration     none
    color               white

    background          none
    background-image    url('more-btn.png')
    background-position bottom center
    background-repeat   no-repeat
    background-size     10rem

    @media tablet
      font-size         6rem

    @media desktop
      font-size         4.5rem
