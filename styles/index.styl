// Typography
@import url(http://fonts.googleapis.com/css?family=Lato:400,100,300,700&subset=latin,latin-ext);

// Font weights
hairline  = 100
light     = 300
regular   = 400
bold      = 700

// Typography classes
.small
  font-size       .8em
  font-weight     thin
  margin          0

// Colors
red       = #c44545
gray      = #515353

// Media
tablet    = 'screen and (min-width: 640px)'
desktop   = 'screen and (min-width: 960px)'

// Responsive baseline and typography grid
html
  font-family 'Lato', sans-serif;

  // It's mobile by default
  font-size         2px

  body
    font-size       8rem  // 12px


  @media tablet
    font-size       3px
    body
      font-size     7rem  // 12px

  @media desktop
    font-size       4px
    body
      font-size     6rem // 14px
html
  height  100%

body
  min-height  100%

  margin  0
  padding 0

  color           white
  display         flex

  background      black
  background-image    url('background.jpg')
  background-position top center

#container
  width           100%
  min-height      100%
  padding         0 16rem
  box-sizing      border-box

  flex-grow       1
  flex-shrink     0

  display         flex
  flex-direction  column
  justify-content space-between

  background      hsla(0,0%,0%,90%)
  transition      background 1s ease

  text-align      center

  @media tablet
    text-align    initial

  header
    flex-shrink   0
    flex-grow     0

  main
    flex-grow     1
    flex-shrink   0

  // Components:
  @import header
  @import main
