header
  display         flex
  justify-content space-between
  align-items     center

  width           100%
  max-width       1140px
  margin          auto

  padding         4rem
  box-sizing      border-box

  #logo
    max-width     55rem

    img
      max-width   100%

  nav
    display   flex
    align-items center

    a
      color           white
      text-decoration none
      text-transform  uppercase

      &#sign-up
        display         block
        padding         3rem 8rem
        border          solid 1px gray
        border-radius   2rem
        transition      border-color 1s ease

        &:hover
          border-color  red


    #menu
      list-style    none
      display       none
      position      relative

      @media desktop
        display     flex

      li
        padding     5rem 4rem
        margin      0
        font-weight light

      .magic-line
        position      absolute
        bottom        0
        height        2px
        width         40px
        background    red
        transition    left 0.5s ease, width 0.5s ease

    #hamburger
      background  none
      border      none
      display     block

      @media desktop
        display     none
