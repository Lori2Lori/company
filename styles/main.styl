main
  display               flex
  flex-direction        column
  align-items           center
  justify-content       space-around

  text-align            center

  padding               4rem

  > *
    display             block
    margin              auto
    flex-shrink         0

  #menu
    display           flex
    flex-wrap         wrap

    position          relative

    list-style        none

    li
      padding     5rem 4rem
      margin      0
      font-weight light

      a
        color           white
        text-decoration none
        text-transform  uppercase


    .magic-line
      position      absolute
      bottom        0
      height        2px
      width         40px
      background    red
      transition    left 0.5s ease, width 0.5s ease

  p
    max-width           160rem

footer
  text-align            center
  
  .source
    font-size           9rem
    text-decoration     none
    color               white

    &:after
      content           '</>'
      display           block
      font-weight       bold
      padding           3rem

    @media tablet
      font-size         6rem

    @media desktop
      font-size         4.5rem
