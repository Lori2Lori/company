// Typography
@import url(http://fonts.googleapis.com/css?family=Lato:400,100,300,700&subset=latin,latin-ext);
hairline  = 100
light     = 300
regular   = 400
bold      = 700

// Colors
red       = #c44545
gray      = #515353

@import header


html, body, #container
  height  100%
  margin  0
  padding 0

html
  background  black
  color       white
  font-size   4px
  font-family 'Lato', sans-serif;

body
  font-size       3.5rem

#container
  width           100%
  max-width       1140px
  margin          auto
  display         flex
  flex-direction  column


  header
    flex-shrink   0
    flex-grow     0

  main
    height        100%

main
  text-align            center
  display               flex
  flex-direction        column
  align-items           center
  justify-content       space-around
  height                100%

  > *
    display             block
    margin              auto

  h2
    max-width           200rem

    font-weight         light
    font-size           12.5rem

    strong
      font-weight       regular
      color             red

  #play
    min-height          40rem
    max-width           160rem
    min-width           40rem

    background          none
    background-image    url('play-btn.png')
    background-position center
    background-repeat   no-repeat

    border              none

    cursor              pointer

  p
    max-width           160rem

  .more
    padding-bottom      16rem

    font-size           4.5rem
    text-decoration     none
    color               white

    background          none
    background-image    url('more-btn.png')
    background-position bottom center
    background-repeat   no-repeat
