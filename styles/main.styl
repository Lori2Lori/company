// Typography
@import url(http://fonts.googleapis.com/css?family=Lato:400,100,300,700&subset=latin,latin-ext);
hairline  = 100
light     = 300
regular   = 400
bold      = 700

// Colors
red       = #c44545
gray      = #515353

@import header


html, body, #container
  min-height  100%

html
  background  black
  color       white
  font-size   4px
  font-family 'Lato', sans-serif;

body
  font-size   3.5rem

#container
  width       100%
  max-width   1140px
  margin      auto

main
  text-align  center

  h2
    max-width   200rem
    margin      auto

    font-weight light
    font-size   12.5rem

    strong
      font-weight regular
      color       red

  #play
    height              120rem
    width               160rem
    max-width           160rem
    min-width           40rem

    background          none
    background-image    url('play-btn.png')
    background-position center
    background-repeat   no-repeat

    border              none

    cursor              pointer

  p
    max-width     160rem
    margin        auto
