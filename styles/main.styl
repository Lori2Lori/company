main
  display               block
  @media tablet
    padding-left        78rem

  > *
    display             block

  #menu
    display           flex
    flex-wrap         wrap
    justify-content   flex-start
    position          relative

    list-style        none
    margin            0
    padding           0


    li
      font-size         5rem
      flex-grow         1
      margin            0
      font-weight       light

      a
        display         block
        padding         4rem 0
        color           white
        text-decoration none
        text-transform  uppercase


    .magic-line
      position      absolute
      bottom        0
      height        2px
      width         40px
      background    red
      transition    left 0.5s ease, width 0.5s ease

footer
  text-align            center


  .source
    text-decoration     none
    color               white

    &:after
      content           '</>'
      display           block
      font-weight       bold
      padding           3rem

    @media tablet
      font-size         6rem

    @media desktop
      font-size         4.5rem
